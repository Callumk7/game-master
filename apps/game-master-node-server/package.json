{
	"name": "game-master-node-server",
	"type": "module",
	"scripts": {
		"dev:tsc": "tsc --watch --preserveWatchOutput",
		"dev:node": "node --watch dist/index.js",
		"dev:esbuild": "pnpm run build --watch",
		"dev": "run-p dev:*",
		"typescriptDev": "tsx --env-file=.env src/index.ts",
		"test": "vitest",
		"test:run": "vitest run",
		"build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --format=esm --packages=external",
		"start": "node dist/index.js",
		"lint": "biome check --write",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio"
	},
	"dependencies": {
		"alligator-auth": "link:../../../../auth/alligator",
		"@aws-sdk/client-s3": "^3.674.0",
		"@hono/node-server": "^1.12.1",
		"@repo/api": "workspace:*",
		"callum-util": "^2.0.1",
		"drizzle-orm": "^0.33.0",
		"drizzle-zod": "^0.5.1",
		"hono": "^4.5.9",
		"http-status-codes": "^2.3.0",
		"postgres": "^3.4.4",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.8.3",
		"@types/node": "^20.11.17",
		"@vitest/ui": "^2.0.5",
		"dotenv": "^16.4.5",
		"drizzle-kit": "^0.24.2",
		"esbuild": "^0.23.1",
		"npm-run-all": "^4.1.5",
		"tsx": "^4.7.1",
		"typescript": "^5.5.4",
		"vite-tsconfig-paths": "^5.0.1",
		"vitest": "2.0.4"
	}
}
