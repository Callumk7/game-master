{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": [
			"apps/game-master-node-server/drizzle/**/*",
			"apps/game-master-node-server/dist/**/*",
			"apps/game-master-node-server/.turbo/**/*",
			"apps/game-master-client/build/**/*",
			"apps/game-master-client/.turbo/**/*",
			"apps/game-master-client/app/entry.server.tsx",
			"apps/game-master-client/app/entry.client.tsx",
			"packages/api/dist/**/*",
			"packages/api/.turbo/**/*",
			".turbo/**/*"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"useExhaustiveDependencies": "warn"
			},
			"security": {
				"noDangerouslySetInnerHtml": "warn"
			},
			"style": {
				"noNonNullAssertion": "off"
			},
			"complexity": {
				"noForEach": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 90,
		"lineEnding": "lf",
		"ignore": []
	},
	"overrides": [
		{
			"include": ["*.jsx", "*.tsx"],
			"formatter": {
				"indentWidth": 2,
				"indentStyle": "space"
			}
		}
	]
}
