{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["build/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"deploy": {
			"dependsOn": ["build"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test:run": {
			"dependsOn": ["build"],
			"cache": true
		}
	}
}
